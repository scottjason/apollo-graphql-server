{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "strict": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noEmit": false,
    "outDir": "./dist",
    "lib": ["es2022"],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
